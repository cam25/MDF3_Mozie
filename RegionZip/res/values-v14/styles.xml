<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>
	
    <style name="textLabels">
        <item name="android:textColor">@android:color/holo_green_light</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">5dp</item>
         
    </style>
    
    <style name="jsonResults">
        <item name="android:textStyle">bold</item> 
        <item name="android:paddingRight">1dp</item> 
       
        </style>
        
    <style name="listHeaderStyle">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textSize">15sp</item>
    </style>
        
    <style name="editTextStyle">
        <item name="android:textStyle">bold</item>   
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        </style>
        
    <style name="spinnerStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:textStyle">bold</item>   
        <item name="android:textSize">25sp</item> 
        <item name="android:background">#FFF000</item>
        <item name="android:popupBackground">#FFF000</item>
        <item name="android:textColor">#993399</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">beginning</item>
        <item name="android:dividerHeight">10dp</item>
        
        
        </style>
      
</resources>
